@model Perkjam.Client.ViewModels.AddUserViewModel

<h2 class="leftMarginSmaller">Add User</h2>

<form asp-action="AddUser" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">

    <div class="form-horizontal leftMarginDefault">
        
        <div class="form-group">
            <div>Name</div>
            <input asp-for="Name" class="form-control" />
        </div>
        
        <div class="form-group">
            <div>Email</div>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group">
            <div>
                <input type="submit" class="btn btn-primary" value="Add user" />
            </div>
        </div>
    </div>
</form>